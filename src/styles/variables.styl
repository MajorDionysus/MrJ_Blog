/* utils */
white(a)
  rgba(255, 255, 255, a)

black(a)
  rgba(0, 0, 0, a)

rainbow-light = linear-gradient(to right, 
  rgba(255,185,185,0.92),    /* 柔和水红 */
  rgba(255,215,190,0.92),    /* 浅珊瑚 */
  rgba(255,240,200,0.92),    /* 香槟金 */
  rgba(220,240,200,0.92),    /* 薄荷绿 */
  rgba(185,240,210,0.92),    /* 碧波绿 */
  rgba(185,230,230,0.92),    /* 浅湖蓝 */
  rgba(185,205,255,0.92),    /* 淡牛仔 */
  rgba(205,190,255,0.92),    /* 薰衣草 */
  rgba(240,190,240,0.92),    /* 粉紫 */
  rgba(255,190,205,0.92),    /* 樱花粉 */
  rgba(255,185,185,0.92))    /* 循环 */

rainbow-dark = linear-gradient(to right, 
  rgba(210,80,80,0.85),      /* 宝石红 */
  rgba(210,120,90,0.85),     /* 陶土橙 */
  rgba(210,160,100,0.85),    /* 琥珀金 */
  rgba(130,160,100,0.85),    /* 橄榄绿 */
  rgba(100,160,130,0.85),    /* 翡翠绿 */
  rgba(100,140,160,0.85),    /* 孔雀蓝 */
  rgba(100,120,210,0.85),    /* 午夜蓝 */
  rgba(140,110,210,0.85),    /* 紫水晶 */
  rgba(210,110,210,0.85),    /* 兰花紫 */
  rgba(210,110,140,0.85),    /* 莓果红 */
  rgba(210,80,80,0.85))      /* 循环 */

:root
  --radius-large 1rem
  --content-delay 150ms

body {
    font-family: 'LXGW WenKai', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    line-height: 1.6;
    font-weight: 360;
    color: #333;
}

h1, h2, h3, h4, h5, h6 {
    font-family: 'KaiTi', serif;
    font-weight: 700;
    color: #222;
    line-height: 1.6;
}

define(vars)
  :root
    for key, value in vars
      {key}: value[0]
  :root.dark
    for key, value in vars
      if length(value) > 1
        {key}: value[1]

